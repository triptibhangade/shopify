    <h1> {{ section.settings.text-box-title }} </h1>
    <h3> {{ section.settings.text-box-content }} </h3>
  </div>
</div>

{% schema %}
  {
    "name": "Text Box",
    "settings": [
    {
      "id": "text-box-title",
      "type": "text",
      "label": "Heading",
      "default": "Title"
    },
    {
      "id": "text-box-content",
      "type": "richtext",
      "label": "add custom text below",
      "default": "<p>Add your text here</p>"
    }
    ]
  }
{% endschema %}

