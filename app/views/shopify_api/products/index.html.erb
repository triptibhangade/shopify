<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>      
    </th>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.variants.first.price %></td>
        <td><%= product.variants.first.inventory_quantity %></td>
        <td><%= product.body_html %></td>
        <td><%= link_to 'Show', shopify_api_product_path(product), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Edit', edit_shopify_api_product_path(product), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Destroy', shopify_api_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

