<% url = product.new_record? ?  products_path(@product) : product_path(@product) %>
<% binding.pry %>
<%= form_with model: @product do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    Title: <%= form.text_field :title, value: product.title %><br>
    Price: <%= form.number_field :price, value: product.variants.first.price %> <br>
    Quantity: <%= form.number_field :inventory_quantity, value: product.variants.first.inventory_quantity %> <br>
    Description: <%= form.text_area :body_html, value: product.body_html %><br>
    <%= form.submit %>
  </div>
<% end %>
