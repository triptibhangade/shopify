<h1>Editing Product</h1>

<%= form_with url: product_path(@product), method: :patch do |form| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    Title: <%= form.text_field :title, value: @product.title %><br>
    Price: <%= form.number_field :price, value: @product.variants.first.price %> <br>
    Description: <%= form.text_area :body_html, value: @product.body_html %><br>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Show', product_path(@product), class: "btn btn-default btn-xs" %> |
<%= link_to 'Back', root_path, class: "btn btn-default btn-xs" %>
